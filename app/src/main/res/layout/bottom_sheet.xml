<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:behavior_peekHeight="130dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:background="#FFFFFF"
    android:id="@+id/bottom_sheet"
    android:elevation="10dp">

    <View
        android:id="@+id/vector"
        android:layout_width="24dp"
        android:layout_height="14.808dp"
        android:layout_marginStart="185dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_expand_less_black_24dp"
        />

    <TextView
        android:id="@+id/sample_imag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/sample_imag"
        android:textAppearance="@style/sample_imag"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:src="@drawable/bw1"
            android:layout_margin="5dp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:src="@drawable/bw2"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/bw3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:src="@drawable/bw4"
            android:layout_margin="5dp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:src="@drawable/bw5"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:src="@drawable/bw3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:src="@drawable/bw1"
            android:layout_margin="5dp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:src="@drawable/bw2"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/bw3"/>

    </LinearLayout>

</LinearLayout>